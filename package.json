  },
  "devDependencies": {
    "eslint": "^5.10.0",
    "husky": "^1.2.0",
    "jsdom": "^13.0.0",
    "rollup": "^0.67.4",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-terser": "^3.0.0",
    "tape": "^4.9.0",
    "tape-await": "0.1.1"
