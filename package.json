  },
  "devDependencies": {
    "eslint": "^6.0.1",
    "husky": "^3.0.2",
    "jsdom": "^15.1.0",
    "rollup": "^1.20.1",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-terser": "^5.0.0",
    "tape": "^4.9.0",
    "tape-await": "0.1.2"
  }
