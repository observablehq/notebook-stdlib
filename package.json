{
  "name": "@observablehq/stdlib",
  "version": "3.1.1",
  "license": "ISC",
  "main": "dist/stdlib.js",
  "module": "src/index.js",
  "author": {
    "name": "Observable, Inc.",
    "url": "https://observablehq.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/observablehq/stdlib.git"
  },
  "scripts": {
    "test": "tape -r esm 'test/**/*-test.js'",
    "prepublishOnly": "rollup -c",
